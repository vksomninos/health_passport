<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateNewPassword">




    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back_arrow"/>

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create New Password"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create your new password to login"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textStyle="normal"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

    <RelativeLayout
        android:id="@+id/rlmain"
        android:layout_width="327dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/bgdesign"
        android:elevation="10dp"


        >

        <ImageView
            android:id="@+id/lock"
            android:layout_width="24dp"
            android:layout_height="24dp"
           android:layout_centerVertical="true"
           android:layout_marginHorizontal="25dp"
            android:src="@drawable/lock" />

        <EditText
            android:id="@+id/emial_in_register"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:hint="........"
            android:inputType="textEmailAddress"
            android:layout_toRightOf="@id/lock"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black" />
        <ImageView
            android:id="@+id/eye"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
           android:layout_toRightOf="@id/emial_in_register"
            android:src="@drawable/eye" />

    </RelativeLayout>
        <RelativeLayout
            android:layout_width="327dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_below="@id/rlmain"
            android:background="@drawable/bgdesign"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/locks"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="25dp"
                android:src="@drawable/lock"
                app:tint="#A1A8B0" />

            <EditText
                android:id="@+id/emial_in_registers"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:hint="Confirm Password"
                android:inputType="textEmailAddress"
                android:layout_toRightOf="@id/locks"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black" />
            <ImageView
                android:id="@+id/eyes"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/emial_in_registers"
                android:src="@drawable/eye" />

        </RelativeLayout>

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/createpass"
        android:layout_width="327dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/buttonbg"
        android:text="Create Password"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</LinearLayout>