<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".homeFragments.Loginfragment">
    
    <RelativeLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Login"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textStyle="bold"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">
        <RelativeLayout
            android:id="@+id/mainrll"
            android:layout_width="327dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:elevation="1dp"
            android:background="@drawable/bgdesign"
            android:weightSum="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/email1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:src="@drawable/email"
                app:tint="#A1A8B0" />
            <EditText
                android:id="@+id/gmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textSize="16sp"

                android:background="@android:color/transparent"
                android:hint="Enter Your Email"
                android:layout_toRightOf="@id/email1"
                android:inputType="textEmailAddress"

                android:layout_centerVertical="true"
                android:textStyle="normal"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="327dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_below="@id/mainrll"
            android:background="@drawable/bgdesign"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/locks"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/lock"
                android:layout_marginStart="15dp"

                app:tint="#A1A8B0" />

            <EditText
                android:id="@+id/emial_in_registers"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:hint="Enter your password"
                android:inputType="textEmailAddress"
                android:layout_toRightOf="@id/locks"
                android:singleLine="true"
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                android:textColor="@color/black" />
            <ImageView
                android:id="@+id/eyes"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
              android:layout_alignParentEnd="true"
                android:layout_toRightOf="@id/emial_in_registers"
                android:src="@drawable/eye" />

        </RelativeLayout>

        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Forgot Password?"
            android:textColor="#0957DD"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="40dp"

            android:textSize="18sp"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/verify"
        android:layout_width="327dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/buttonbg"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/verify"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't have an account?"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textSize="16sp"
            android:layout_toRightOf="@id/txt4"
            android:textColor="#0956DE"
            android:layout_marginStart="5dp"
            android:textStyle="normal" />

    </RelativeLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="OR"
        android:textSize="22sp"
        android:textStyle="normal" />

    <RelativeLayout
        android:layout_width="327dp"
        android:layout_height="50dp"

        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_below="@id/mainrll"
        android:background="@drawable/bgdesign"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/gmails"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/googlebtn"
            android:layout_marginStart="15dp"/>

        <EditText

            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:text="Sign in with Google"
            android:inputType="textEmailAddress"
            android:layout_toRightOf="@id/gmails"
            android:singleLine="true"
            android:layout_marginStart="35dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="327dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_below="@id/mainrll"
        android:background="@drawable/bgdesign"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/apple"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/apple"
            android:layout_marginStart="15dp"/>

        <EditText

            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:text="Sign in with Apple"
            android:inputType="textEmailAddress"
            android:layout_toRightOf="@id/apple"
            android:singleLine="true"
            android:layout_marginStart="35dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="327dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_below="@id/mainrll"
        android:background="@drawable/bgdesign"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/fb"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/fblogo"
            android:layout_marginStart="15dp"/>

        <EditText

            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:text="Sign in with Facebook"
            android:inputType="textEmailAddress"
            android:layout_toRightOf="@id/fb"
            android:singleLine="true"
            android:layout_marginStart="35dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black" />

    </RelativeLayout>
</LinearLayout>